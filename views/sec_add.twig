{% extends 'layouts/base.html' %}
{% block head %}
   {{parent()}}
   <style>
      .form-person .form-group select {
         display: inline-block;
         width: 49%;
      }
      .diasds-selector input {
         display: none!important;
      }
      .diasds-selector input[type=checkbox] + label {
         display: inline-block;
         border-radius: 6px;
         background: #ffffff;
         height: 40px;
         width: 5em;
         margin-right: 3px;
         line-height: 40px;
         text-align: center;
         cursor: pointer;
         color: black;
      }
      .diasds-selector input[type=checkbox]:checked + label {
         background: #337ab7;
         color: #ffffff;
      }
      @media screen and ( max-width: 768px) {
         .diasds-selector input[type=checkbox] + label {
            width: 4em;
         }
      }

   </style>
{% endblock %}
{% block title %}
   {{title|capitalize}}
{% endblock %}
{% block content %}
   {{parent()}}
   <form action="" class="fad col-md-6 col-md-offset-3 text-center">
