{% extends 'layouts/base.twig' %}
{% block head %}
		{{parent()}}
		<style>
		.fad [type='submit']{
			margin-top: 1.25em;
			font-size: 1.1em;
		}
		.fad label{
			font-size: 1.25em;
			margin-bottom: .8em;
		}
	</style>
{% endblock %}
{% block title %} {{title|capitalize|title}} {% endblock %}
{% block content %}
{% if messa %}
<div class='alert alert-{{messa.type}} alert-dismissible text-center' role='alert'>
<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
{% if messa.type == 'danger' or messa.type == 'warning'%}<span class="fa fa-{{messa.icon}}"></span> {% endif %}{{messa.message|title}}. {% if messa.type == 'success' %}<span class="fa fa-{{messa.icon}}"></span>{% endif %}
</div>
{% endif %}
	{{parent()}}
	<form action="" class="fad col-sm-12 col-sm-offset-1 col-md-4 col-md-offset-1 text-center" method="post">
		<div class="form-group">
			<label for="sxcod">Buscar por codigo</label>
			<input type="text" name="sxcod" id="sxcod" class="form-control">
			<input type="submit" name="ssxcod" value="Buscar" class="btn btn-success">
		</div>
	</form>
	<form action="" class="fad col-sm-12 col-sm-offset-1 col-md-4 col-md-offset-2 text-center" method="post">
		<div class="form-group">
			<label for="sxem">Buscar por email academico</label>
			<input type="text" name="sxem" id="sxem" class="form-control">
			<input type="submit" name="ssxem" value="Buscar" class="btn btn-success">
		</div>
	</form>
	{% if empleado %}
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title text-center">{{title|upper}}</h3>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Codigo</th>
							<th>Apellido paterno</th>
							<th>Apellido materno</th>
							<th>Nombre(s)</th>
							<th>Editar</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th>{{empleado.cod}}</th>
							<td>{{empleado.ap1}}</td>
							<td>{{empleado.ap2}}</td>
							<td>{{empleado.nombre}}</td>
							<td class='text-left'><a href="{{empleado.link}}_edit.php?cod={{empleado.id}}" target='_blank'><span class="fa fa-edit fa-lg" data-toggle="tooltip" data-placement="right" title="Editar"></span></a></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endif %}
{% endblock %}
{% block scripts %}
{{parent()}}
<script src="../js/tooltip.js"></script>
<script>
	$(function () {
		$('[data-toggle="tooltip"]').tooltip()
	})
</script>
{% endblock %}
