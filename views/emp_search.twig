{% extends 'layouts/base.twig' %}
{% block head %}
		{{parent()}}
		<style>
		.fad [type='submit']{
			margin-top: 1.25em;
			font-size: 1.1em;
		}
		.fad label{
			font-size: 1.25em;
			margin-bottom: .8em;
		}
	</style>
{% endblock %}
{% block title %} {{title|capitalize|title}} {% endblock %}
{% block content %}
{% if messa %}
<div class='alert alert-{{messa.type}} alert-dismissible text-center' role='alert'>
<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
{% if messa.type == 'danger' or messa.type == 'warning'%}<span class="fa fa-{{messa.icon}}"></span> {% endif %}{{messa.message|title}}. {% if messa.type == 'success' %}<span class="fa fa-{{messa.icon}}"></span>{% endif %}
</div>
{% endif %}
	{{parent()}}
	<form action="" class="fad col-sm-12 col-sm-offset-1 col-md-4 col-md-offset-1 text-center" method="post">
		<div class="form-group">
			<label for="sxcod">Buscar por codigo</label>
			<input type="text" name="sxcod" id="sxcod" class="form-control">
			<input type="submit" name="ssxcod" value="Buscar" class="btn btn-success">
		</div>
	</form>
	<form action="" class="fad col-sm-12 col-sm-offset-1 col-md-4 col-md-offset-2 text-center" method="post">
		<div class="form-group">
			<label for="sxem">Buscar por email academico</label>
			<input type="text" name="sxem" id="sxem" class="form-control">
			<input type="submit" name="ssxem" value="Buscar" class="btn btn-success">
		</div>
	</form>
	{% if empleado %}
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<h3 class="panel-title text-center">{{title|upper}}</h3>
			</div>
			<div class="table-responsive">
				<table class="table table-striped table-hover">
					<thead>
						<tr>
							<th>Codigo</th>
							<th>Apellido paterno</th>
							<th>Apellido materno</th>
							<th>Nombre(s)</th>
							<th>Detalles</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<th>{{empleado.cod}}</th>
							<td>{{empleado.ap1}}</td>
							<td>{{empleado.ap2}}</td>
							<td>{{empleado.nombre}}</td>
							<td><button type="button" class="btn-link" data-toggle="modal" data-target="#myModal" data-togle="tooltip" data-placement="right" title="Ver detalles del administrativo"><span class="fa fa-external-link fa-lg"></span></button></td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
{% endif %}
{% endblock %}
{% block scripts %}
{% if empdata %}
	<div class="modal fade" tabindex="-1" id="myModal" role="dialog">
	  <div class="modal-dialog" role="document">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
	        <h4 class="modal-title">Datos de la secretaria</h4>
	      </div>
	      <div class="modal-body">
			  <div class="table-responsive">
				  <table class="table table-bordered table-striped">
					  <colgroup>
						  <col class="col-xs-2">
						  <col class="col-xs-6">
					  </colgroup>
					  <tbody>
						  <tr>
							  <th scope="row">Codigo:</th>
							  <td>{{empdata.id}}</td>
						  </tr>
						  <tr>
							  <th scope="row">Correo academico:</th>
							  <td>{{empdata.email_acad}}</td>
						  </tr>
						  <tr>
							  <th scope="row">Nombre:</th>
							  <td>{{empdata.nombre}}</td>
						  </tr>
						  <tr>
							  <th scope="row">Apellidos:</th>
							  <td>{{empdata.ap1}} {{empdata.ap2}}</td>
						  </tr>
						  <tr>
							  <th scope="row">Status:</th>
							  <td>{{empdata.status}}</td>
						  </tr>
						  <tr>
							  <th scope="row">Correo personal:</th>
							  <td>{{empdata.email}}</td>
						  </tr>
					  </tbody>
				  </table>
			  </div>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	      </div>
	    </div><!-- /.modal-content -->
	  </div><!-- /.modal-dialog -->
	</div><!-- /.modal -->
{% endif %}
{{parent()}}
<!-- <script src="../js/modal.js"></script> -->
<script src="../js/tooltip.js"></script>
<script>
	$(function () {
		$('[data-togle="tooltip"]').tooltip()
	})
</script>
{% endblock %}
