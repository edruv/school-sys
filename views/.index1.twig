	<body>
		<a href="php/login.php" class="btn btn-info"><span class="fa fa-mail-reply fa-fw"></span>Empleados</a>
		<div class="container">
			{% if messa %}
			<div class='alert alert-{{messa.type}} alert-dismissible text-center' role='alert'>
			<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
			{% if messa.type == 'danger' %}<span class="fa fa-{{messa.icon}}"></span> {% endif %}{{messa.message|capitalize}}. {% if messa.type == 'success' %}<span class="fa fa-{{messa.icon}}"></span>{% endif %}
			</div>
			{% endif %}
			<form class="form-signin" method="post">
				<h2 class="form-signin-heading text-center">Ingresa para alumnos</h2>
				<label for="signcod" class="sr-only">Codigo</label>
				<input type="text" id="signcod" name="signcod" class="form-control" placeholder="Codigo" autofocus>
				<!-- <input type="text" id="signcod" name="signcod" class="form-control" placeholder="Codigo" required autofocus> -->
				<label for="signpass" class="sr-only">Contraseña</label>
				<input type="password" id="signpass" name="signpass" class="form-control" placeholder="Contraseña">
				<!-- <input type="password" id="signpass" name="signpass" class="form-control" placeholder="Contraseña" required> -->
				{% if errors %}
			   <div class="alert alert-danger text-left" role="alert">
			      <ul>
			      {% for error in errors %}
			         <li><span class="fa fa-exclamation-triangle"></span> {{error|capitalize}}.</li>
			      {% endfor %}
			      </ul>
			   </div>
			   {% endif %}
				<button class="btn btn-lg btn-primary btn-block" name="signin" type="submit">Entrar</button>
			</form>
			</div> <!-- /container -->
			<script src="js/ie10-viewport-bug-workaround.js"></script>
		</body>
	</html>
