{% extends 'layouts/base.twig' %}
{% block title %} {{title|capitalize|title}} {% endblock %}
{% block content %}
{% if messa %}
<div class='alert alert-{{messa.type}} alert-dismissible text-center' role='alert'>
<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
{% if messa.type == 'danger' or messa.type == 'warning'%}<span class="fa fa-{{messa.icon}}"></span> {% endif %}{{messa.message|title}}. {% if messa.type == 'success' %}<span class="fa fa-{{messa.icon}}"></span>{% endif %}
</div>
{% endif %}
{{parent()}}
	<form action="" class="fad col-md-6 col-md-offset-3 text-center" method="post">
		<div class="form-group">
			<label for="regsec" class="col-md-12 control-label">ID de materia &nbsp; <span class="fa fa-question-circle" data-toggle="tooltip" data-placement="right" title="Ingresa el ID de la materia que quieres agendar"></span></label>
			<div class="col-xs-12 col-md-6 col-md-offset-3">
				<input type="text" name="regsec" id="regsec" class="form-control">
			</div>
		</div>
		<input type="submit" name="adca" value="{{title|capitalize|title}}" class="btn btn-success">
		{% if errors %}
		<div class="alert alert-danger text-left" role="alert">
			<ul>
			{% for error in errors %}
				<li><span class="fa fa-exclamation-triangle"></span> {{error|capitalize}}.</li>
			{% endfor %}
			</ul>
		</div>
		{% endif %}
	</form>
	<div class="col-md-6 col-md-offset-3">
		<a href="offer_pre.php" class="btn btn-default col-xs-10 col-xs-offset-1 col-md-4 col-md-offset-4"> Oferta academica &nbsp;<span class="fa fa-mail-forward"></span></a>
	</div>
{% endblock %}
{% block scripts %}
{{parent()}}
<script src="../js/transition.js"></script>
<script src="../js/modal.js"></script>
<script src="../js/tooltip.js"></script>
<script>
	$(function () {
		$('[data-toggle="tooltip"]').tooltip()
	})
</script>
{% endblock %}
