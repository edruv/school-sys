{% extends 'layouts/base.html' %}
{% block head %}
	{{parent()}}
	<style>
		.form-person .form-group select {
			display: inline-block;
			width: 49%;
		}
	</style>
{% endblock %}
{% block title %} {{title|capitalize|title}} {% endblock %}
{% block content %}
{% if messa %}
<div class='alert alert-{{messa.type}} alert-dismissible text-center' role='alert'>
<button type='button' class='close' data-dismiss='alert' aria-label='Close'><span aria-hidden='true'>&times;</span></button>
{% if messa.type == 'danger' %}<span class="fa fa-{{messa.icon}}"></span> {% endif %}{{messa.message|title}}. {% if messa.type == 'success' %}<span class="fa fa-{{messa.icon}}"></span>{% endif %}
</div>
{% endif %}
{{parent()}}
	<form action="#" class="fad col-md-6 col-md-offset-3 text-center" method="post">
		<div class="form-person">
			<label for="tyca">Tipo de carrera</label>
			<div class="form-group text-center col-lg-12">
				<label for="tyca" class="visible-xs">Tipo de carrera</label>
				<select name="tyca" id="tyca" class="form-control text-center" >
					<option value="">Tipo de carrera</option>
					<option value="lic.">Licenciatura</option>
					<option value="ing.">Ingenieria</option>
					<option value="lic. en ing.">Licenciatura en Ingenieria</option>
				</select>
				<label for="join" class="visible-xs">preposicion</label>
				<select name="join" id="join" class="form-control text-center" >
				<!-- <select name="join" id="join" class="form-control text-center" required> -->
					<option value="">Preposicion</option>
					<option value="n/a">N/A</option>
					<option value="en">en</option>
					<option value="de">de</option>
				</select>
			</div>
		</div>
		<div class="form-group">
			<label for="ncar">Nombre de la carrera</label>
			<input type="text" name="ncar" id="ncar" value="" class="form-control text-center" placeholder="Solo nombre de la carrera" >
		</div>
		{% if errors %}
			<div class="alert alert-danger text-left" role="alert">
				<ul>
				{% for error in errors %}
					<li><span class="fa fa-exclamation-triangle"></span> {{error|capitalize}}.</li>
				{% endfor %}
				</ul>
			</div>
		{% endif %}
		<input type="submit" name="adca" value="{{title|capitalize|title}}" class="btn btn-success">
	</form>
{% endblock %}
