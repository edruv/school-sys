{% extends 'layouts/base.html' %}
{% block title %}
   Detalles del edificio {{title|capitalize|title}}
{% endblock %}
{% block content %}
   {{parent()}}
   <div class="panel panel-info">
      <div class="panel-heading text-center">
         <h3 class="panel-title">Edificio {{title|title}}</h3>
      </div>
      <div class="panel-body">
         <div class="table-responsive">
            <table class="table table-bordered table-striped">
               <colgroup>
                  <col class="col-xs-2">
                  <col class="col-xs-6">
               </colgroup>
               <tbody>
                  <tr>
                     <th scope="row">ID:</th>
                     <td>{{res[0]['edif']}}</td>
                  </tr>
                  <tr>
                     <th scope="row">Nombre:</th>
                     <td>{{title|capitalize}}</td>
                  </tr>
                  <tr>
                     <th scope="row">Numero de aulas:</th>
                     <td>{{total}}</td>
                  </tr>
               </tbody>
            </table>
         </div>
      </div>
      <div class="table-responsive">
         <table class="table table-striped table-bordered table-hover">
            <thead>
               <tr>
                  <th class="text-center info" colspan="3">Salones en el edificio {{title|title}}</th>
               </tr>
               <tr>
                  <th>ID</th>
                  <th>Numero</th>
                  <th>Nombre</th>
               </tr>
            </thead>
            <tbody>
               {% for aula in res %}
                  <tr>
                     <th>{{aula.id}}</th>
                     <td>{{aula.num}}</td>
                     <td>{{aula.edau|capitalize}}</td>
                  </tr>
               {% endfor %}
            </tbody>
         </table>
      </div>
   </div>
{% endblock %}
